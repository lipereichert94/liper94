<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome*"/>
    <EditText
        android:id="@+id/editText_NomeCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o nome"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login*"/>
    <EditText
        android:id="@+id/editText_LoginCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o login"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha*"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/editText_SenhaCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira uma senha"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repetir senha*"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/editText_SenhaRepetirCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Repita sua senha"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PermissÃ£o*"
        android:layout_marginTop="20dp"/>
    <RadioGroup
        android:id="@+id/permissaouser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/radioadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrador (Read Write)" />

        <RadioButton
            android:id="@+id/radioleitura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualizador (Read Only)" />

    </RadioGroup>
    <Button
        android:id="@+id/button_SalvarUsuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/button_removerUsuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/button_CancelarUsuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textAllCaps="false"/>
</LinearLayout>