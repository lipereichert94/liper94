<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro de Estabelecimentos"
        android:textAlignment="center"
        android:textSize="35dp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nome:"/>
    <EditText
        android:id="@+id/editText_NomeCadastroEstabelecimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o nome do estabelecimento:"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/button_SalvarEstabelecimento"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/button_removerEstabelecimento"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/button_CancelarEstabelecimento"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>