<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".CadastrarActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login*"/>
    <EditText
        android:id="@+id/editText_EmailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira seu e-mail"
        android:inputType="textEmailAddress"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha*"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/editText_SenhaLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informe sua senha"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/OkLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ok"/>
    <Button
        android:id="@+id/RecuperarSenhaLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Recuperar Senha"/>
</LinearLayout>